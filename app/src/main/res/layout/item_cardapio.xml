<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_view"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/descricaoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="DESCRICAO"
        app:layout_constraintStart_toEndOf="@+id/item_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="TITULO"
        app:layout_constraintStart_toEndOf="@+id/item_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="preco"
        app:layout_constraintStart_toEndOf="@+id/caloriasItem"
        app:layout_constraintTop_toBottomOf="@+id/descricaoItem" />

    <TextView
        android:id="@+id/caloriasItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="calorias"
        app:layout_constraintStart_toEndOf="@+id/glutenItem"
        app:layout_constraintTop_toBottomOf="@+id/descricaoItem" />

    <TextView
        android:id="@+id/glutenItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="gluten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/descricaoItem"
        app:layout_constraintTop_toBottomOf="@+id/descricaoItem" />
</androidx.constraintlayout.widget.ConstraintLayout>